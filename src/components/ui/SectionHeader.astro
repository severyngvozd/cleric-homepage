---
import Pill from './Pill.astro';

interface Props {
	pill?: string;
	title: string;
	description?: string;
	align?: 'left' | 'center';
	class?: string;
}

const { pill, title, description, align = 'center', class: className = '' } = Astro.props;
---

<div class={`section-header ${align === 'left' ? 'section-header-left' : ''} ${className}`}>
	{pill && (
		<Pill>{pill}</Pill>
	)}
	<h2 class="section-title">{title}</h2>
	{description && (
		<p class="section-description">{description}</p>
	)}
</div>

<style>
	.section-header {
		text-align: center;
		margin-bottom: 64px;
	}

	.section-header-left {
		text-align: left;
	}

	.section-title {
		font-size: 48px;
		font-weight: 400;
		color: #313131;
		margin: 0 0 16px;
		font-family: 'GT Alpina', 'Cleric Sans Text', serif;
	}

	.section-description {
		font-size: 24px;
		color: #313131;
		margin: 0;
		font-family: 'Cleric Sans Text', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
	}

	@media (max-width: 991px) {
		.section-title {
			font-size: 40px;
		}

		.section-description {
			font-size: 20px;
		}
	}

	@media (max-width: 767px) {
		.section-title {
			font-size: 32px;
		}

		.section-description {
			font-size: 18px;
		}
	}
</style>

