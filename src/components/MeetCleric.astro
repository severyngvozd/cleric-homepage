---
import clericImage from '../assets/image/meet-cleric/Cleric.png';
import SectionHeader from './ui/SectionHeader.astro';
---

<section id="meet-cleric" class="meet-cleric">
	<div class="meet-cleric-container">
		<SectionHeader
			pill="How it works"
			title="Meet Cleric"
			description="Cleric investigates problems, surfaces answers, and learns from your engineers."
		/>

		<div class="how-card">
			<img src={clericImage.src} alt="Cleric interface showing how it works" class="how-image" />
		</div>
	</div>
</section>

<style>
	.meet-cleric {
		padding: 120px 0 160px;
		background: linear-gradient(180deg, #f8f8f8 0%, #f7f9fa 100%);
	}

	.meet-cleric-container {
		margin: 0 auto;
		text-align: center;
	}


	.how-card {
		margin: 0 auto;
		background: transition;
	}

	.how-image {
		display: block;
		width: 100%;
		max-width: 100%;
		height: auto;
		object-fit: contain;
		object-position: center;
	}

	@media (max-width: 768px) {
		.meet-cleric {
			padding: 80px 16px 120px;
		}

		.meet-cleric-container {
			padding: 0 16px;
		}

		.section-title {
			font-size: 32px;
		}

		.how-image {
			max-height: 600px;
		}
	}
</style>

