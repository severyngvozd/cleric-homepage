---
import securityImage from '../assets/image/security/security.png';
import arrowIcon from '../assets/icons/arrow-up-right.svg';
---

<section id="security" class="security">
	<div class="security-container">
		<div class="security-content">
			<div class="security-text">
				<div class="pill">Security-first</div>
				<h2 class="section-title">Paranoid by design</h2>
				<p class="section-description">
					Read-only by default. Every action logged, every investigation auditable. Your data encrypted everywhere and never used for training.
				</p>
				<div class="trust-link">
					<span>Learn more in our </span>
					<a href="#" class="link-with-icon">
						Trust Center
						<img src={arrowIcon.src} alt="" class="link-arrow" />
					</a>
				</div>
			</div>

			<div class="security-image">
				<img src={securityImage.src} alt="Security overview" class="security-img" />
			</div>
		</div>
	</div>
</section>

<style>
	.security {
		padding: 120px 0;
		background: linear-gradient(180deg, #f8f8f8 0%, #f7f9fa 100%);
	}

	.security-container {
		max-width: 1192px;
		margin: 0 auto;
	}

	.security-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.security-text {
		flex: 1;
        max-width: 560px;
	}

	.pill {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 8px 16px;
		border-radius: 4px;
		background-color: #e0e0e0;
		color: #6b6b6b;
		font-size: 14px;
		font-weight: 500;
		margin-bottom: 24px;
	}

	.section-title {
		font-size: 48px;
		font-weight: 400;
		color: #313131;
		margin: 0 0 24px;
	}

	.section-description {
		font-size: 18px;
		color: #313131;
		margin: 0 0 24px;
		line-height: 1.5;
	}

	.trust-link {
		font-size: 18px;
		color: #313131;
	}

	.link-with-icon {
		color: #313131;
		text-decoration: underline;
		display: inline-flex;
		align-items: center;
		gap: 4px;
	}

	.link-arrow {
		width: 16px;
		height: 16px;
		display: inline-block;
		filter: brightness(0);
	}

	.security-image {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.security-img {
		display: block;
		width: 100%;
		max-width: 100%;
		height: auto;
		object-fit: contain;
	}

	@media (max-width: 991px) {
		.security {
			padding: 80px 96px;
		}

		.security-container {
			padding: 0;
		}

		.security-content {
			flex-direction: column;
			gap: 48px;
		}

		.security-text {
			text-align: left;
			max-width: 100%;
		}

		.section-title {
			font-size: 40px;
		}

		.section-description {
			font-size: 16px;
		}

		.pill {
			font-size: 13px;
		}

		.security-image {
			width: 100%;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}

	@media (max-width: 767px) {
		.security {
			padding: 64px 16px;
		}

		.security-container {
			padding: 0;
		}

		.security-content {
			flex-direction: column;
			gap: 32px;
		}

		.security-text {
			text-align: left;
			max-width: 100%;
		}

		.section-title {
			font-size: 32px;
		}

		.section-description {
			font-size: 16px;
		}

		.pill {
			font-size: 12px;
		}

		.security-image {
			width: 100%;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}
</style>

