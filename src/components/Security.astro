---
import securityImage from '../assets/image/security/security.png';
import SectionHeader from './ui/SectionHeader.astro';
import LinkWithIcon from './ui/LinkWithIcon.astro';
---

<section id="security" class="security">
	<div class="security-container">
		<div class="security-content">
			<div class="security-text">
				<SectionHeader
					pill="Security-first"
					title="Paranoid by design"
					description="Read-only by default. Every action logged, every investigation auditable. Your data encrypted everywhere and never used for training."
					align="left"
				/>
				<div class="trust-link">
					<span>Learn more in our </span>
					<LinkWithIcon href="#" iconColor="black">Trust Center</LinkWithIcon>
				</div>
			</div>

			<div class="security-image">
				<img src={securityImage.src} alt="Security overview" class="security-img" />
			</div>
		</div>
	</div>
</section>

<style>
	.security {
		padding: 120px 0;
		background: linear-gradient(180deg, #f8f8f8 0%, #f7f9fa 100%);
	}

	.security-container {
		max-width: 1192px;
		margin: 0 auto;
	}

	.security-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.security-text {
		flex: 1;
        max-width: 560px;
	}

	.trust-link {
		font-size: 18px;
		color: #313131;
	}

	.security-image {
		flex: 1;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.security-img {
		display: block;
		width: 100%;
		max-width: 100%;
		height: auto;
		object-fit: contain;
	}

	@media (max-width: 991px) {
		.security {
			padding: 80px 96px;
		}

		.security-container {
			padding: 0;
		}

		.security-content {
			flex-direction: column;
			gap: 48px;
		}

		.security-text {
			text-align: left;
			max-width: 100%;
		}

		.section-title {
			font-size: 40px;
		}

		.section-description {
			font-size: 16px;
		}

		.pill {
			font-size: 13px;
		}

		.security-image {
			width: 100%;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}

	@media (max-width: 767px) {
		.security {
			padding: 64px 16px;
		}

		.security-container {
			padding: 0;
		}

		.security-content {
			flex-direction: column;
			gap: 32px;
		}

		.security-text {
			text-align: left;
			max-width: 100%;
		}

		.security-image {
			width: 100%;
			display: flex;
			justify-content: center;
			align-items: center;
		}
	}
</style>

