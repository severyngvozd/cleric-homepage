---
import kubeLogo from '../assets/image/integrations/kubernetes.png';
import terraformLogo from '../assets/image/integrations/terraform.png';
import grafanaLogo from '../assets/image/integrations/grafana.png';
import prometheusLogo from '../assets/image/integrations/prometheus.png';
import pulumiLogo from '../assets/image/integrations/pulumi.png';
import gitlabLogo from '../assets/image/integrations/gitlab.png';
import notionLogo from '../assets/image/integrations/notion.png';
import gcpLogo from '../assets/image/integrations/googlecloud.png';
import azureLogo from '../assets/image/integrations/azure.png';
import githubLogo from '../assets/image/integrations/github.png';
import elasticLogo from '../assets/image/integrations/elastic.png';
import datadogLogo from '../assets/image/integrations/datadog.png';
import nomadLogo from '../assets/image/integrations/nomad.png';
import confluenceLogo from '../assets/image/integrations/confluence-logomark.png';
import swarmLogo from '../assets/image/integrations/swarm.png';
import arrowIcon from '../assets/icons/arrow-up-right.svg';

const logosRow1 = [
	{ logo: kubeLogo, alt: 'Kubernetes' },
	{ logo: notionLogo, alt: 'Notion' },
	{ logo: pulumiLogo, alt: 'Pulumi' },
	{ logo: grafanaLogo, alt: 'Grafana' },
	{ logo: prometheusLogo, alt: 'Prometheus' },
	{ logo: terraformLogo, alt: 'Terraform' },
	{ logo: elasticLogo, alt: 'Elastic' },
	{ logo: datadogLogo, alt: 'Datadog' },
];

const logosRow2 = [
	{ logo: nomadLogo, alt: 'Nomad' },
	{ logo: confluenceLogo, alt: 'Confluence' },
	{ logo: swarmLogo, alt: 'Docker Swarm' },
	{ logo: gcpLogo, alt: 'Google Cloud' },
	{ logo: azureLogo, alt: 'Azure' },
	{ logo: gitlabLogo, alt: 'GitLab' },
	{ logo: githubLogo, alt: 'GitHub' },
];
---

<section id="integrations" class="integrations">
	<div class="integrations-container">
		<div class="pill">Integrations</div>
		<h2 class="section-title">Built to plug right into your stack</h2>
		<p class="section-description">
			Connect your whole stack in an afternoon. Read access by default, write access when you're ready.
		</p>

		<div class="logos-grid">
			<div class="logos-row logos-row-1">
				{logosRow1.map((item) => (
					<div class="logo-card">
						<img src={item.logo.src} alt={item.alt} />
					</div>
				))}
			</div>
			<div class="logos-row logos-row-2">
				{logosRow2.map((item) => (
					<div class="logo-card">
						<img src={item.logo.src} alt={item.alt} />
					</div>
				))}
			</div>
		</div>

		<div class="integrations-cta">
			<span>See if Cleric is a fit for your stack</span>
			<a href="#" class="cta-link">
				<span>your stack</span>
				<img src={arrowIcon.src} alt="" class="cta-arrow" />
			</a>
		</div>
	</div>
</section>

<style>
	.integrations {
		padding: 160px 0 80px;
		background: #ffffff;
		text-align: center;
	}

	.integrations-container {
		max-width: 1192px;
		margin: 0 auto;
		padding: 0 32px;
	}

	.pill {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 8px 16px;
		border-radius: 4px;
		background-color: #e0e0e0;
		color: #6b6b6b;
		font-size: 14px;
		font-weight: 500;
		margin-bottom: 24px;
	}

	.section-title {
		font-size: 48px;
		font-weight: 400;
		color: #313131;
		margin: 0 0 16px;
	}

	.section-description {
		font-size: 24px;
		color: #313131;
		margin: 0 0 64px;
	}

	.logos-grid {
		display: flex;
		flex-direction: column;
		gap: 16px;
		margin-bottom: 40px;
		align-items: center;
	}

	.logos-row {
		display: flex;
		justify-content: center;
		gap: 80px;
		align-items: center;
	}

	.logos-row-2 {
		position: relative;
		padding-left: 10px;
	}

	.logo-card {
		width: 80px;
		height: 80px;
		border-radius: 16px;
		background: #f7f9fa;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.logo-card img {
		max-width: 32px;
		max-height: 32px;
		object-fit: contain;
	}

	.integrations-cta {
		font-size: 14px;
		color: #6b6b6b;
		margin-top: 24px;
	}

	.cta-link {
		margin-left: 4px;
		color: #313131;
		text-decoration: underline;
		display: inline-flex;
		align-items: center;
		gap: 4px;
	}

	.cta-arrow {
		width: 14px;
		height: 14px;
		filter: brightness(0);
	}


	@media (max-width: 991px) {
		.integrations {
			padding: 80px 96px 60px 96px;
		}

		.integrations-container {
			padding: 0;
			text-align: left;
		}

		.section-title {
			font-size: 40px;
		}

		.section-description {
			font-size: 20px;
		}

		.pill {
			font-size: 13px;
		}

		.logos-grid {
			align-items: flex-start;
		}

		.logos-row {
			gap: 32px;
			justify-content: flex-start;
			flex-wrap: wrap;
		}

		.logos-row-2 {
			padding-left: calc((64px + 32px) / 2);
		}

		.logo-card {
			width: 64px;
			height: 64px;
		}

		.integrations-cta {
			text-align: center;
		}
	}

	@media (max-width: 767px) {
		.integrations {
			padding: 64px 16px;
		}

		.integrations-container {
			padding: 0;
			text-align: left;
		}

		.section-title {
			font-size: 32px;
		}

		.section-description {
			font-size: 18px;
		}

		.pill {
			font-size: 12px;
		}

		.logos-grid {
			display: grid;
			grid-template-columns: repeat(5, 64px);
			gap: 16px;
			justify-content: center;
			justify-items: center;
		}

		.logos-row {
			display: contents;
		}

		.logos-row-1 .logo-card:nth-child(n+6) {
			grid-column: span 1;
		}

		.logos-row-2 {
			padding-left: 0;
		}

		.logos-row-2 .logo-card {
			grid-column: span 1;
		}

		.logo-card {
			width: 64px;
			height: 64px;
		}

		.logo-card img {
			max-width: 28px;
			max-height: 28px;
		}
	}
</style>


