---
import mountainHero from '../assets/image/hero/mountain_hero.png';
import heroSlack from '../assets/image/hero/hero_slack.png';
import heroWeb from '../assets/image/hero/hero_web.png';
import arrowUpRight from '../assets/icons/arrow-up-right.svg';
---

<section class="hero" style={`background-image: url(${mountainHero.src});`}>
	<div class="hero-container">
		<div class="hero-pill">
			<button class="pill-label" type="button">Press release</button>
			<button class="pill-link" type="button">
				Cleric launches the first self-learning AI SRE
				<img src={arrowUpRight.src} alt="" class="pill-arrow" />
			</button>
		</div>

		<h1 class="hero-title">
			<span class="hero-title-line">The AI SRE That Learns</span>
			<span class="hero-title-line">From Your Engineers</span>
		</h1>

		<p class="hero-description">
			Cleric investigates production issues, captures what works, and makes your whole team faster.
		</p>

		<div class="hero-cta">
			<button class="hero-btn btn-primary" type="button">Start for Free</button>
			<button class="hero-btn btn-outline" type="button">Request Demo</button>
		</div>

		<div class="hero-mockups">
			<img src={heroWeb.src} alt="Cleric web interface" class="hero-web" />
			<img src={heroSlack.src} alt="Cleric Slack thread" class="hero-slack" />
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		margin-top: -270px;
		padding: 350px 32px 0 32px;
		display: flex;
		align-items: center;
		justify-content: center;
		background-size: 175%;
		background-position: center top;
		background-repeat: no-repeat;
		color: #ffffff;
	}

	.hero::before {
		content: '';
		position: absolute;
		left: 0;
		right: 0;
		bottom: 0;
		height: 200px;
		background: linear-gradient(
			to bottom,
			rgba(255, 255, 255, 0) 0%,
			rgba(255, 255, 255, 0.5) 40%,
			rgba(255, 255, 255, 0.9) 60%,
			#ffffff 80%
		);
		z-index: 2;
		pointer-events: none;
	}

	.hero-container {
		max-width: 1160px;
		margin: 0 auto;
		text-align: center;
		width: 100%;
		position: relative;
		z-index: 1;
	}

	.hero-pill {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		padding: 12px;
		background: rgba(0, 0, 0, 0.1);
		border-radius: 6px;
		border: 1px solid rgba(0, 0, 0, 0.10);
		backdrop-filter: blur(24px);
		margin-bottom: 48px;
	}

	.pill-label {
		padding: 4px 12px;
		border-radius: 4px;
		border: none;
		background: #E1DEFE;
		color: #313131;
		font-size: 15px;
		font-weight: 500;
		box-shadow:
			0px 3px 20px rgba(66, 72, 70, 0.1),
			0px 3px 3px rgba(66, 72, 70, 0.1);
		cursor: pointer;
	}

	.pill-link {
		border: none;
		background: transparent;
		color: #ffffff;
		font-size: 14px;
		font-weight: 500;
		display: inline-flex;
		align-items: center;
		gap: 6px;
		cursor: pointer;
	}

	@media (max-width: 768px) {
		.pill-link {
			font-size: 12px;
		}

		.pill-label {
			font-size: 12px;
		}
	}

	.pill-arrow {
		width: 16px;
		height: 16px;
		display: inline-block;
	}

	.hero-title {
		font-size: 72px;
		font-weight: 400;
		color: #ffffff;
		margin: 0 0 32px;
		letter-spacing: -2.5%;
	}

	.hero-title-line {
		display: block;
	}

	.hero-description {
		font-size: 24px;
		color: #ffffff;
		margin: 0 0 32px;
		max-width: 680px;
		margin-left: auto;
		margin-right: auto;
		letter-spacing: 0.75%
	}

	.hero-cta {
		display: flex;
		gap: 32px;
		justify-content: center;
		margin-bottom: 0;
		flex-wrap: wrap;
	}

	.hero-mockups {
		position: relative;
		margin-top: 128px;
		display: flex;
		justify-content: center;
	}

	.hero-web {
		width: 100%;
		border-radius: 6px;
		box-shadow:
			0px 3px 20px rgba(39, 43, 49, 0.1),
			0px 3px 3px rgba(39, 43, 49, 0.08);
	}

	.hero-slack {
		position: absolute;
		right: -8%;
		bottom: 0;
		width: 350px;
		border-radius: 6px;
		box-shadow:
			0px 3px 20px rgba(39, 43, 49, 0.1),
			0px 3px 3px rgba(39, 43, 49, 0.08);
	}

	.hero-btn {
		padding: 12px 32px;
		border-radius: 999px;
		font-weight: 500;
		font-size: 18px;
		cursor: pointer;
		transition: all 0.3s ease;
		width: 190px;
	}

	.btn-primary {
		background: #ffffff;
		color: #313131;
		border: none;
	}

	.btn-primary:hover {
		background: #ECECECE5;
	}

	.btn-outline {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(4px);
		color: #ffffff;
		border: 1px solid rgba(255, 255, 255, 0.6);
	}

	.btn-outline:hover {
		background: rgba(255, 255, 255, 0.12);
	}


	@media (max-width: 1600px) {
		.hero {
			background-size: cover;
			background-position: center top;
		}
	}

	@media (max-width: 1340px) {
		.hero-web {
			transform: scale(0.95);
			transform-origin: center;
		}

		.hero-slack {
			right: -2%;
			transform: scale(0.95);
			transform-origin: bottom right;
		}
	}

	@media (max-width: 1200px) {
		.hero-slack {
			right: 3%;
			bottom: 0;
			width: 320px;
			transform: none;
		}
	}

	@media (max-width: 992px) {
		.hero {
			background-size: cover;
		}

		.hero-title {
			font-size: 56px;
		}

		.hero-description {
			font-size: 20px;
		}

		.hero-slack {
			right: 36px;
			bottom: 0;
			width: 220px;
			transform: none;
		}

		.hero-web {
			width: 734px
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding: 160px 16px 0;
			min-height: auto;
			background-size: cover;
			flex-direction: column;
			justify-content: space-between;
			margin-top: -160px;
		}

		.hero-title {
			font-size: 40px;
		}

		.hero-description {
			font-size: 18px;
		}

		.hero-mockups {
			margin-top: 120px;
			margin-bottom: 0;
			justify-content: center;
			align-self: flex-end;
			width: 100%;
		}

		.hero-web {
			display: none;
		}

		.hero-slack {
			position: static;
			margin-top: 0;
			width: 100%;
			max-width: 100%;
		}

		.hero-cta {
		gap: 16px;
	}
	}

</style>

